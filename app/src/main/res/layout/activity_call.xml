<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ž Emergency Contacts"
                android:textSize="24sp"
                android:textColor="#D81B60"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnAddContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âž• Add Contact"
                android:backgroundTint="#D81B60"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Contacts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D81B60" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contactRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Call History"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D81B60" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/historyRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnClearHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ—‘ï¸ Clear Call History"
                android:backgroundTint="#D81B60"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F8BBD0"
        android:padding="10dp">

        <TextView
            android:id="@+id/nav_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“\nLocation"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“ž\nCall"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ \nHome"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_alert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ””\nAlert"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ‘¤\nProfile"
            android:textAlignment="center"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
