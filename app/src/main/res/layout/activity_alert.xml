<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF8F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¢ Push Alert Notifications"
                android:textSize="22sp"
                android:textColor="#D81B60"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- Alert List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš¨ Emergency SOS"
                android:textSize="18sp"
                android:textColor="#D81B60"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Input Field -->
            <EditText
                android:id="@+id/editTextAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your emergency message..."
                android:background="@android:drawable/editbox_background_normal"
                android:padding="12dp" />

            <!-- Send Alert Button -->
            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš¨ Send Alert"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D81B60"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Clear All Floating Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnClearAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="Clear All Alerts"
        android:tint="#FFFFFF"
        android:backgroundTint="#D81B60" />


    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F8BBD0"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/nav_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“\nLocation"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“ž\nCall"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ \nHome"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_alert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ””\nAlert"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ‘¤\nProfile"
            android:textAlignment="center"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
