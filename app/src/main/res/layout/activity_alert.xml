<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F5"
    tools:context=".AlertActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/alert_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title: Push Notifications -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔔 Push Alert Notifications"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D81B60"
                android:layout_marginBottom="8dp" />

            <!-- Sample Notification -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Fire alarm reported at Dorm A\n• Power outage near Cafeteria"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="20dp" />

            <!-- Title: Emergency SOS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚨 Emergency SOS"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D81B60"
                android:layout_marginBottom="8dp" />

            <!-- Input Box -->
            <EditText
                android:id="@+id/sosInput"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Describe your emergency here..."
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="15sp"
                android:gravity="top"
                android:layout_marginBottom="20dp" />

            <!-- SOS Button -->
            <Button
                android:id="@+id/btnSendSOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Distress Signal"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D81B60" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F8BBD0"
        android:padding="10dp">

        <TextView
            android:id="@+id/nav_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📍\nLocation"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📞\nCall"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🏠\nHome"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nav_alert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔔\nAlert"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="👤\nProfile"
            android:textAlignment="center"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
